#draw 1
DrawLine(10,300, 100, 200) #x1, y1, x2, y2
DrawLine(100,200, 100, 400) #x1, y1, x2, y2
#draw 0
DrawLine(200,400, 300, 400) #x1, y1, x2, y2
DrawLine(200,200, 200, 400) #x1, y1, x2, y2

DrawLine(400,400, 500, 400) #x1, y1, x2, y2
plt.imshow(img);
plt.show();
